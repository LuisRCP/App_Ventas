@model IEnumerable<PanelPrincipal.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h2>Lista de Productos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Producto_Nombre</td>
                <td>@item.Marca_Articulo</td>
                <td>@item.Precio</td>
                <td>@item.Cantidad_Stock</td>
                <td>
                    @if (item.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td><a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-warning btn-sm">Editar</a></td>
            </tr>
        }
    </tbody>
</table>